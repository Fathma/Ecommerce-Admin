<div class="box">
    <div class="register-logo">
        <a href="#"><b>RestoreProductsTo</b>Inventory</a>
    </div>

    <div class="box-body">

        <div class="row">
            <div class="col-sm-12 col-md-6 col-md-offset-2 col-sm-offset-3">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="well">
                            <h4>Select Serial numbers</h4>
                            <div class="btn-group-vertical">
                                {{# each live.serial}}
                                <a class="btn" type="button" id="serial{{@index}}" onclick="set_disable(this.id)" class="btn btn-secondary">
                                    {{this}}
                                </a>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-8">

                        <div class="well">
                            <form action="/products/RestoreNoSerial/{{live._id}}" method="POST">
                                {{!-- {{!-- <input type="hidden" name="all_pp" id="all_pp"  value="{{highest_pp}}"> --}}
                                <input type="hidden" name="live_quantity" value="{{live.quantity}}"> 
                                <input type="hidden" name="live_frontquantity" value="{{live.frontQuantity}}"> 

                                <div class="form-group">
                                    <label for="model">Model</label>
                                    <input type="text" name="model" class="form-control" value="{{live.product_id.model}}"
                                        readonly>
                                </div>

                                <div class="form-group">
                                    <label for="lot_number">Live ID</label>
                                    <input type="text" name="liveId" class="form-control" value="{{live._id}}"
                                        readonly>
                                </div>

                                <div class="form-group">
                                    <label for="new_q">Quatity to Restore</label>
                                    <input type="text" name="new_q" id="new_q" class="form-control"></input>
                                </div>

                                <button type="submit" class="btn btn-primary">Update</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>