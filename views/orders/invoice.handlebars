<div class="row">
    {{!-- <div class="col-sm-1"></div> --}}
    <div class="col-sm-12 left-col">
        <div>
            <br>
            <br>
            <br>
            <br>
            <br>
            <br>
            <br>

            <div class="panel-body">

                <table class="table">
                    <tbody>
                        <tr>
                            <td><b> Order ID:</b></td>
                            <td>{{order._id}}</td>
                            <td><b>Invoice No:</b></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td><b>Customer:</b></td>
                            <td>{{order.user.profile.name}}</td>
                            <td><b>Stock Location:</b></td>
                            <td>{{order.stockLocation}}</td>
                        </tr>
                        <tr>
                            <td><b>E-Mail:</b></td>
                            <td>{{order.user.email}}</td>
                            <td><b>Sales Person:</b></td>
                            <td>{{user.name}}</td>
                        </tr>
                        <tr>
                            <td><b>Telephone:</b></td>
                            <td>{{order.user.contact}}</td>
                            <td><b>Entry By:</b></td>
                            <td>{{user.name}}</td>
                        </tr>
                        <tr>
                            <td><b>Payment Method:</b></td>
                            <td>{{order.paymentMethod}}</td>
                            <td><b>Address:</b></td>
                            <td>{{order.address}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="panel-body">
                <div class="product">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <td class="text-left">Product</td>
                                    <td class="text-right">Quantity</td>
                                    <td class="text-right">Unit Price</td>
                                    <td class="text-right">Total</td>
                                </tr>
                            </thead>
                            <tbody>
                                {{# each order.cart}}

                                <tr>
                                    <td class="text-left">
                                        <a href="#">{{this.product.name}}</a>
                                        <br>
                                        <p>SN:{{# each this.serial}}
                                            {{this}}
                                            {{/each}}</p>
                                        <br>
                                    </td>
                                    <td class="text-right">{{this.quantity}}</td>
                                    <td class="text-right">{{this.unitPrice}}TK</td>
                                    <td class="text-right">{{this.price}}TK</td>
                                </tr>
                                {{/each}}
                                <tr>
                                    <td colspan="3" class="text-right">Shipping Cost:</td>
                                    <td class="text-right">{{order.shippingCost}}TK</td>
                                </tr>
                                {{!-- <tr>
                                    <td colspan="3" class="text-right">VAT (20%):</td>
                                    <td class="text-right">$3.00</td>
                                </tr> --}}
                                {{!-- <tr>
                                    <td colspan="3" class="text-right">Sub-Total:</td>
                                    <td class="text-right">$15.00</td>
                                </tr> --}}
                                <tr>
                                    <td colspan="3" class="text-right">Total:</td>
                                    <td class="text-right">{{order.totalAmount}}TK</td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
                <br><br>
                <div class="pull-right">
                    <p class="pull-right">_____________</p><br>
                    <p class="pull-right">Authorised Signature and Company Stamp</p>
                </div><br><br>
                <div>
                    <p>Signature and Company Stamp</p>
                    <p>Goods sold and received or accepted by the customers are not returnable.</p>
                    <p>Warranty will void of all products if sticker is removed.</p>
                </div>
            </div>
        </div>
    </div>
</div>
{{!-- <div class="col-sm-1"></div> --}}
<button class="btn btn-info text-center pull-right" style="background-color: #0747a6; margin-bottom:10px;" onclick="myFunction()"
    id="buttonID">Download</button>
</div>
