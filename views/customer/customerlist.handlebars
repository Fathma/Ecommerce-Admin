<div class="container-fluid" style="width:100%;min-height: 700px">

    <div class="register-logo">
        <a href="#"><b>Registered</b>Customers</a>
    </div>
    <a href="/customers/email/page">Email All</a>
    {{# if customer}}
    <div class="row">
        <div class="col-sm-12 col-md-10 col-md-offset-1 col-sm-offset-1">
            <ul class="list-group">
                <li class="list-group-item">
                    <div class="row">

                        <div class="col-md-2 ">
                            <strong>Email</strong>
                        </div>
                        <div class="col-md-2 ">
                            <strong>Name</strong>
                        </div>
                        <div class="col-md-2 ">
                            <strong>Contact</strong>
                        </div>
                        <div class="col-md-2 ">
                            <strong>Active</strong>
                        </div>
                        <div class="col-md-2 ">
                            <strong>Action</strong>
                        </div>

                    </div>
                </li>

                {{# each customer}}

                <li class="list-group-item">

                    <div class="row">
                        <div class="col-md-2 ">
                            <strong>{{this.email}}</strong>
                        </div>

                        <div class="col-md-2 ">
                            <strong>{{this.profile.name}}</strong>
                        </div>
                        <div class="col-md-2 ">
                            <strong>{{this.contact}}</strong>
                        </div>
                        <div class="col-md-2 ">
                            <strong>{{this.isActive}}</strong>
                        </div>
                        <div class="col-md-2 ">
                            <a href="/customers/single/{{this._id}}" class="btn btn-default">View</a>
                            <a href="/customers/block/{{this._id}}" class="btn btn-default">Block</a>
                            <a href="#ex1{{this._id}}" rel="modal:open" class="btn btn-default">Wishlist</a>
                            {{!-- /customers/wishlist/{{this._id}} --}}
                        </div>
                    </div>
                </li>
                <div id="ex1{{this._id}}" class="modal" style="background: white">
                    {{# if this.items}}
                   
                    <table class="table" >
                        <tr>
                            <th >Title</th>
                           
                        </tr>
                          {{# each this.items}}
                        <tr>
                           
                            <td  >{{this.product.name}}</td>
                            
                        </tr>
                        {{/each}}

                    </table>
                    
                    
                    {{/if}}

                </div>
                {{/each }}
            </ul>
        </div>
    </div>
    {{ else }}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <h2 id="search-result" onclick="searchPartial()">No Item in found</h2>
        </div>
    </div>

    {{/if}}


</div>